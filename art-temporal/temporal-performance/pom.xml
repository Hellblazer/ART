<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0
         http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <parent>
        <groupId>com.hellblazer.art</groupId>
        <artifactId>art-temporal</artifactId>
        <version>0.0.1-SNAPSHOT</version>
        <relativePath>../pom.xml</relativePath>
    </parent>

    <artifactId>temporal-performance</artifactId>
    <name>Temporal ART - High Performance Implementations</name>
    <description>
        Vectorized and optimized implementations of temporal ART using Java Vector API.
        Provides 10-100x speedup for production deployments.
    </description>

    <dependencies>
        <!-- Core ART Dependencies -->
        <dependency>
            <groupId>com.hellblazer.art</groupId>
            <artifactId>art-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hellblazer.art</groupId>
            <artifactId>art-performance</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Internal Dependencies -->
        <dependency>
            <groupId>com.hellblazer.art</groupId>
            <artifactId>temporal-core</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hellblazer.art</groupId>
            <artifactId>temporal-dynamics</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hellblazer.art</groupId>
            <artifactId>temporal-memory</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hellblazer.art</groupId>
            <artifactId>temporal-masking</artifactId>
            <version>${project.version}</version>
        </dependency>
        <dependency>
            <groupId>com.hellblazer.art</groupId>
            <artifactId>temporal-integration</artifactId>
            <version>${project.version}</version>
        </dependency>

        <!-- Performance Libraries -->
        <dependency>
            <groupId>org.jctools</groupId>
            <artifactId>jctools-core</artifactId>
        </dependency>
        <dependency>
            <groupId>com.lmax</groupId>
            <artifactId>disruptor</artifactId>
        </dependency>

        <!-- Math Libraries -->
        <dependency>
            <groupId>org.apache.commons</groupId>
            <artifactId>commons-math3</artifactId>
        </dependency>

        <!-- Testing -->
        <dependency>
            <groupId>org.junit.jupiter</groupId>
            <artifactId>junit-jupiter</artifactId>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.openjdk.jmh</groupId>
            <artifactId>jmh-core</artifactId>
            <version>1.37</version>
            <scope>test</scope>
        </dependency>
        <dependency>
            <groupId>org.openjdk.jmh</groupId>
            <artifactId>jmh-generator-annprocess</artifactId>
            <version>1.37</version>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.maven.plugins</groupId>
                <artifactId>maven-compiler-plugin</artifactId>
                <configuration>
                    <release>24</release>
                    <compilerArgs>
                        <arg>--enable-preview</arg>
                        <arg>--add-modules=jdk.incubator.vector</arg>
                    </compilerArgs>
                </configuration>
            </plugin>
        </plugins>
    </build>
</project>