<?xml version="1.0" encoding="UTF-8"?>
<configuration>
    <!-- Console appender for test output -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root logger configuration -->
    <root level="INFO">
        <appender-ref ref="CONSOLE"/>
    </root>

    <!-- Suppress DEBUG logs from MultiChannelProcessor -->
    <logger name="com.hellblazer.art.hartcq.core.MultiChannelProcessor" level="INFO"/>

    <!-- Suppress DEBUG logs from all hart-cq components -->
    <logger name="com.hellblazer.art.hartcq" level="INFO"/>

    <!-- Turn off verbose logging for test framework -->
    <logger name="org.junit" level="WARN"/>
</configuration>